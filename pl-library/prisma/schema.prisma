generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LibUser {
  id       Int     @id @unique @default(autoincrement())
  username String  @unique
  token    String
  admin    Boolean
}

model Key {
  id       Int     @id @unique @default(autoincrement())
  owner    Int
  host     String
  key      String  @unique
  approved Boolean
}

model File {
  id          Int     @id @unique @default(autoincrement())
  dest        String?
  title       String?
  description String?
  author      String?
  published   DateTime @default(now())
  cover       String?
  likes       String[] // id@host[]
  dislikes    String[] // id@host[]
}

model Comment {
  id      Int    @id @unique @default(autoincrement())
  author  String // id@host
  content String
  posted  DateTime @default(now())
  file_id Int
}

model LibInfo {
  id          Int    @id @unique @default(autoincrement())
  name        String
  description String
}
